<article>
  <header>
    <h2><%= @project.name %></h2>
  </header>
  <p>
    <%= @project.description %>
  </p>
  <table>
    <tr>
      <th>Pledge amount:</th>
      <td><%= number_to_currency(@project.target_pledge_amount) %></td>
    </tr>
    <tr>
      <th>Pledgeing ends on:</th>
      <td><%= format_end_date(@project) %></td>
    </tr>
    <tr>
      <th>Website:</th>
      <td><%= @project.website %></td>
    </tr>
  </table>
</article>

<%= link_to 'All Projects', projects_path %> |
<%= link_to 'Edit Project', edit_project_path(@project) %> |
<%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: 'Are you sure?'} %>